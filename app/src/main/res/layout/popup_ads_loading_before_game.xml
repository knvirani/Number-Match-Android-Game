<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parent_cv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/default_popup_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_circular"
            android:layout_marginVertical="75dp"
            app:layout_constraintTop_toTopOf="@id/content_container"
            app:layout_constraintBottom_toBottomOf="@id/content_container"
            app:layout_constraintStart_toStartOf="@id/content_container"
            app:layout_constraintEnd_toEndOf="@id/content_container"
            android:visibility="visible"
            android:layout_gravity="center"
            app:trackColor="@color/default_game_session_linear_progress_track"
            app:indicatorColor="@color/default_circular_progress_indicator"
            android:indeterminateBehavior="repeat"
            android:indeterminate="true"
            app:indicatorSize="75dp"
            app:trackThickness="@dimen/standard_half_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>