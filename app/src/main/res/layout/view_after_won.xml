<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/session_complete_tv"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/standard_space"
        android:text="Completed"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:fontFamily="@font/roboto_medium"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:alpha="1"
        android:src="@drawable/daily_card_picture_v2"
        android:layout_width="wrap_content"
        android:layout_height="170dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/data_container_cv"
        android:layout_margin="@dimen/standard_space"
        app:cardElevation="@dimen/standard_space"
        app:cardCornerRadius="@dimen/standard_space"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/level_header_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="LEVEL:"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_1"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/step_header_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="STEP:"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_2"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/score_header_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="SCORE:"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_3"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/time_header_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="Completed in:"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/level_value_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="MEDIUM"
                        android:gravity="center"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_4"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/step_value_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_5"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/score_value_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="47485"
                        android:gravity="center"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/divider_view_6"
                        android:background="@color/default_normal_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/time_value_tv"
                        android:textSize="@dimen/result_page_score_text_size"
                        android:textAllCaps="true"
                        android:text="98282"
                        android:gravity="center"
                        android:textColor="@color/default_result_page_score_title"
                        android:padding="@dimen/standard_space"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/divider_view_7"
                android:background="@color/default_normal_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/new_best_score_notice_tv"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="New Best Score Achieved."
                android:textColor="@color/default_result_page_score_title"
                android:padding="@dimen/standard_space"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/standard_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_mb"
            app:icon="@drawable/ic_home"
            app:elevation="@dimen/standard_space"
            app:cornerRadius="@dimen/standard_space"
            android:paddingVertical="12dp"
            android:paddingHorizontal="@dimen/standard_space"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:fontFamily="@font/roboto_medium"
            android:text="Home"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/new_game_mb"
            android:layout_marginStart="@dimen/standard_space"
            app:icon="@drawable/ic_restart"
            app:elevation="@dimen/standard_space"
            app:cornerRadius="@dimen/standard_space"
            android:paddingVertical="12dp"
            android:paddingHorizontal="@dimen/standard_space"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:fontFamily="@font/roboto_medium"
            android:text="New Game"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>