<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/default_popup_card_bg"
        android:id="@+id/parent_cv"
        app:cardCornerRadius="@dimen/standard_space"
        app:cardElevation="@dimen/standard_space"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/popup_header"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/standard_space"
                android:drawableStart="@drawable/ic_pause_filled_circle"
                android:textColor="@color/default_popup_title"
                android:layout_marginTop="@dimen/standard_space"
                android:padding="@dimen/standard_space"
                android:text="Game Paused"
                android:textSize="@dimen/popup_title_text_size"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/standard_space"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/score_header_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:paddingHorizontal="@dimen/standard_space"
                        android:text="Score"
                        android:textSize="@dimen/popup_body_text_size"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/score_value_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:layout_marginBottom="@dimen/standard_space"
                        android:text="20140"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/level_header_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:paddingHorizontal="@dimen/standard_space"
                        android:text="Level"
                        android:textSize="@dimen/popup_body_text_size"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/level_value_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:layout_marginBottom="@dimen/standard_space"
                        android:text="EASY"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginVertical="@dimen/standard_space"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/step_header_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:paddingHorizontal="@dimen/standard_space"
                        android:text="Step"
                        android:textSize="@dimen/popup_body_text_size"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/step_value_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:layout_marginBottom="@dimen/standard_space"
                        android:text="Step-2"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time_header_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:paddingHorizontal="@dimen/standard_space"
                        android:text="Time"
                        android:textSize="@dimen/popup_body_text_size"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/time_value_tv"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/default_popup_title"
                        android:layout_marginBottom="@dimen/standard_space"
                        android:text="12:38"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/divider_view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_normal_divider" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/report_cv"
                app:cardBackgroundColor="@color/default_popup_card_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/report_tv"
                    android:textColor="@color/default_popup_body_text"
                    android:textSize="@dimen/popup_body_text_size"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tap here to report any problem you've encountered while playing"
                    android:padding="@dimen/standard_space"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider_view_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_normal_divider" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/exit_cv"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/default_popup_secondary_btn_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/default_popup_secondary_btn_text"
                        android:padding="@dimen/standard_space"
                        android:text="Exit"
                        android:textSize="@dimen/popup_btn_text_size"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:id="@+id/exit_tv"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/resume_cv"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/default_popup_primary_btn_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/default_popup_primary_btn_text"
                        android:padding="@dimen/standard_space"
                        android:text="Resume"
                        android:textSize="@dimen/popup_btn_text_size"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:id="@+id/resume_tv"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>